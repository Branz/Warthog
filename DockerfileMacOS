# syntax=docker/dockerfile:1

ARG OSXCROSS_VERSION=latest
FROM --platform=$BUILDPLATFORM crazymax/osxcross:${OSXCROSS_VERSION}-alpine AS osxcross

FROM alpine as build
RUN apk add --no-cache clang lld musl-dev fts-dev
ENV PATH="/osxcross/bin:$PATH"
ENV LD_LIBRARY_PATH="/osxcross/lib:$LD_LIBRARY_PATH"
COPY --from=osxcross /osxcross /osxcross
RUN apk add meson libgcc musl-dev gcc g++ upx
COPY . /code
RUN mkdir /build
WORKDIR /code

RUN meson setup /build-macos --cross-file aarch64-macOS.txt --default-library static --buildtype=release
RUN meson compile -C /build-macos
RUN mkdir /install
RUN DESTDIR=/install meson install -C /build-macos

FROM scratch AS export-stage
COPY --from=build install/usr/local/bin/wart-node .
COPY --from=build install/usr/local/bin/wart-wallet .
